{
  "name": "next-pkg-app",
  "version": "1.0.0",
  "description": "demo",
  "private": true,
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -rf build dist .tscache",
    "open": "open dist/mac-arm64/NextPKG.app/Contents/MacOS/NextPKG",
    "build": "yarn clean && yarn build:ts && yarn build:packager",
    "build:ts": "tsc --build .",
    "build:packager": "electron-builder --config electron-builder.yml",
    "start:electron": "electron .",
    "start:cp": "cp -r node_modules/web/dist build/web",
    "start:ts": "tsc-watch --noClear --onFirstSuccess \"yarn start:electron\"",
    "start": "cross-env NODE_ENV=development yarn start:ts"
  },
  "license": "ISC",
  "dependencies": {
    "electron-default-menu": "^1.0.2",
    "electron-reload": "^2.0.0-alpha.1",
    "next-pkg-web": "^1.0.0",
    "resolve": "^1.22.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.9",
    "@types/resolve": "^1.20.6",
    "cross-env": "^7.0.3",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.6.3"
  }
}
