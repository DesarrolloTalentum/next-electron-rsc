{
  "compilerOptions": {
    "tsBuildInfoFile": ".tscache/cache-electron",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es2022",
    "module": "es2022",
    "outDir": "build",
    "rootDir": "src-electron",
    "resolveJsonModule": true
  },
  "include": ["src-electron/**/*.ts", "src-electron/**/*.json"]
}
